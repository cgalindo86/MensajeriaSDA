<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/fondosda"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bordec3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/app_name"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/bienvenida"
                    android:text="BIENVENIDO(A)"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/usuario"
                    android:textStyle="bold|italic"
                    android:textColor="@color/colorRojo"
                    android:textSize="20dp"
                    android:layout_margin="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/calendario"
                            android:textColor="#ffffff"
                            android:background="@drawable/bordec1"
                            android:text="CALENDARIO"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:id="@+id/calificaciones"
                            android:textColor="#ffffff"
                            android:background="@drawable/bordec1"
                            android:text="CALIFICACIONES"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/atencion"
                            android:textColor="#ffffff"
                            android:background="@drawable/bordec1"
                            android:text="CANALES DE ATENCIÓN"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/fichaCovid"
                            android:textColor="#ffffff"
                            android:background="@drawable/bordec1"
                            android:text="FICHA COVID"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/fichaMedica"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bordec1"
                            android:text="FICHA MÉDICA"
                            android:textSize="14dp"
                            android:textColor="#ffffff" />

                        <Button
                            android:id="@+id/carnet"
                            android:textColor="#ffffff"
                            android:background="@drawable/bordec1"
                            android:text="MIS CARNETS"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/mensajes"
                            android:textColor="#ffffff"
                            android:background="@drawable/bordec1"
                            android:text="MENSAJES"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/pagos"
                            android:textColor="#ffffff"
                            android:background="@drawable/bordec1"
                            android:text="PAGOS"
                            android:textSize="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/virtualroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bordec1"
                            android:text="VIRTUAL ROOM"
                            android:textSize="14dp"
                            android:textColor="#ffffff" />
                        <Button
                            android:id="@+id/movilidad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bordec1"
                            android:text="MOVILIDADES"
                            android:textSize="14dp"
                            android:textColor="#ffffff" />
                    </LinearLayout>



                    <Button
                        android:id="@+id/cerrar"
                        android:textColor="#ffffff"
                        android:background="@drawable/bordec2"
                        android:text="CERRAR SESIÓN"
                        android:textSize="14dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </ScrollView>



        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lalista"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorRojo2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lalista2"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorAzulBajo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textoSeleccionado"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
            <TextView
                android:textColor="#ffffff"
                android:textStyle="bold|italic"
                android:text="SELECCIONE AL ALUMNO DANDO CLIC EN SU NOMBRE:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ListView
                android:id="@+id/milista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/cerrar2"
                android:background="@color/colorAzul"
                android:textColor="#ffffff"
                android:text="CERRAR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:id="@+id/calendariooo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="#A0298FC2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/flechaizq"
                    android:src="@drawable/izquierda"
                    android:layout_alignParentLeft="true"
                    android:layout_width="50dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/textoMes"
                    android:textColor="#ffffff"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />
                <ImageView
                    android:id="@+id/flechader"
                    android:src="@drawable/derecha"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="25dp"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.sundeepk.compactcalendarview.CompactCalendarView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/calendar1"
                android:layout_width="fill_parent"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                android:layout_height="200dp"
                app:compactCalendarTargetHeight="200dp"
                app:compactCalendarTextSize="10sp"
                app:compactCalendarTextColor="#000000"
                app:compactCalendarCurrentSelectedDayBackgroundColor="#E57373"
                app:compactCalendarCurrentDayBackgroundColor="#B71C1C"
                app:compactCalendarMultiEventIndicatorColor="#c2f2f9"
                />
    
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/bloque"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="EVALUACIONES"
                        android:layout_width="150dp"
                        android:textColor="#FF0000"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                    <TextView
                        android:id="@+id/resevaluaciones"
                        android:text="0 resultados"
                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="TAREAS"
                        android:layout_width="150dp"
                        android:textColor="#FA9B19"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                    <TextView
                        android:id="@+id/restareas"
                        android:text="0 resultados"
                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="MATERIALES"
                        android:layout_width="150dp"
                        android:textColor="#800040"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                    <TextView
                        android:id="@+id/resmateriales"
                        android:text="0 resultados"
                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:textAlignment="viewEnd"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_margin="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="ACTIVIDADES"
                        android:textAlignment="viewEnd"
                        android:textColor="#1919FA"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                    <TextView
                        android:id="@+id/resactividades"
                        android:layout_marginLeft="7dp"
                        android:text="0 resultados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/detalle"
                    android:background="@drawable/bordec2"
                    android:text="VER DETALLE"
                    android:layout_margin="7dp"
                    android:layout_centerInParent="true"
                    android:textColor="#ffffff"
                    android:textAlignment="gravity"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>



        <ListView
            android:id="@+id/listaeventos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    
    
    
    </LinearLayout>
</LinearLayout>
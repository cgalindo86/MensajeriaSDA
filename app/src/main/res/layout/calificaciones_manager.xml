<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controler.MensajeManager">
    <ImageView
        android:id="@+id/atras"
        android:src="@drawable/boton_atras"
        android:background="#B6EDF6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_below="@id/atras"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>

    <ListView
        android:layout_below="@id/spinner"
        android:id="@+id/milista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
    <LinearLayout
        android:id="@+id/calificaciones"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/ocultar"
            android:text="VOLVER"
            android:textColor="#ffffff"
            android:background="@drawable/bordec1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spinner0"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
        <ListView
            android:id="@+id/milista0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
    </LinearLayout>

</RelativeLayout>